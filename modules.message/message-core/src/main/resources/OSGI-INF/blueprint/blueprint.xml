<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xsi:schemaLocation="
       http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">
    <cm:property-placeholder persistent-id="ConfigMessagePool" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="id" value="MessagePolling"/>
            <cm:property name="type" value="workflow-message"/>
            <cm:property name="interval" value="10000"/>
            <cm:property name="url" value="camel/rest/system/stack"/>
            <cm:property name="stop" value="false"/>
            <cm:property name="callbackHandler" value="onWorkflowMsg"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <reference id="shiroService" interface="cn.com.rexen.core.api.security.IShiroService"/>
    <reference id="stackService" interface="cn.com.rexen.core.api.system.IStackService"/>
    <reference id="messageBeanDao" interface="cn.com.rexen.bean.api.dao.IMessageBeanDao"/>
    <reference id="userBeanService" interface="cn.com.rexen.admin.api.biz.IUserBeanService"/>

    <service id="messageBeanService" interface="cn.com.rexen.bean.api.biz.IMessageBeanService"
             ref="beanServiceImpl">
    </service>

    <bean id="beanServiceImpl" class="cn.com.rexen.bean.core.biz.MessageBeanServiceImpl">
        <property name="dao" ref="messageBeanDao"/>
        <property name="shiroService" ref="shiroService"/>
        <property name="userBeanService" ref="userBeanService"/>
    </bean>

    <service interface="org.osgi.service.event.EventHandler" ref="workFlowMessageEventImpl">
        <service-properties>
            <entry key="event.topics" value="cn/com/rexen/engine/message"/>
        </service-properties>
    </service>

    <bean id="workFlowMessageEventImpl" class="cn.com.rexen.bean.core.biz.WorkFlowMessageEventImpl">
        <property name="dao" ref="messageBeanDao"/>
        <property name="stackService" ref="stackService"/>
    </bean>

    <service interface="org.osgi.service.event.EventHandler" ref="workFlowStarterEventImpl">
        <service-properties>
            <entry key="event.topics" value="cn/com/rexen/engine/starter"/>
        </service-properties>
    </service>

    <bean id="workFlowStarterEventImpl" class="cn.com.rexen.bean.core.biz.WorkFlowStarterEventImpl">
        <property name="dao" ref="messageBeanDao"/>
        <property name="stackService" ref="stackService"/>
    </bean>

    <bean id="messagePollingImpl" class="cn.com.rexen.bean.core.system.MessagePollingServiceImpl">
        <property name="id" value="${id}"/>
        <property name="type" value="${type}"/>
        <property name="interval" value="${interval}"/>
        <property name="url" value="${url}"/>
        <property name="stop" value="${stop}"/>
        <property name="callbackHandler" value="${callbackHandler}"/>
    </bean>
    <service interface="cn.com.rexen.core.api.system.IPollingService" ref="messagePollingImpl"/>
</blueprint>

