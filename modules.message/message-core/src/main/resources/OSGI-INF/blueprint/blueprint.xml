<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
">

    <service id="messageBeanService" interface="cn.com.rexen.bean.api.biz.IMessageBeanService"
             ref="beanServiceImpl">
    </service>


    <bean id="beanServiceImpl" class="cn.com.rexen.bean.core.biz.MessageBeanServiceImpl">
        <property name="dao" ref="messageBeanDao"/>
    </bean>

    <reference id="messageBeanDao" interface="cn.com.rexen.bean.api.dao.IMessageBeanDao"/>

    <service interface="org.osgi.service.event.EventHandler" ref="workFlowMessageEventImpl">
        <service-properties>
            <entry key="event.topics" value="cn/com/rexen/message"/>
        </service-properties>
    </service>
    <bean id="workFlowMessageEventImpl" class="cn.com.rexen.bean.core.biz.WorkFlowMessageEventImpl">
        <property name="dao" ref="messageBeanDao"/>
    </bean>
</blueprint>

