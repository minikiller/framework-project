<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xsi:schemaLocation="
       http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <cm:property-placeholder id="ConfigNewMessageCountPool" persistent-id="ConfigNewMessageCountPool"
                             update-strategy="reload">
        <cm:default-properties>
            <cm:property name="id" value="newMessageCountPolling"/>
            <cm:property name="type" value="polling"/>
            <cm:property name="interval" value="10000"/>
            <cm:property name="url" value="camel/rest/messages/polling/msgCount"/>
            <cm:property name="stop" value="false"/>
            <cm:property name="callbackHandler" value="onWorkflowMsgCount"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <cm:property-placeholder id="ConfigMessagePool" persistent-id="ConfigMessagePool" update-strategy="reload"
                             placeholder-prefix="$[count." placeholder-suffix="]">
        <cm:default-properties>
            <cm:property name="id" value="messagePolling"/>
            <cm:property name="type" value="polling"/>
            <cm:property name="interval" value="10000"/>
            <cm:property name="url" value="camel/rest/messages/polling/msg"/>
            <cm:property name="stop" value="false"/>
            <cm:property name="callbackHandler" value="onWorkflowMsg"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <bean id="newMessageCountPollingServiceImpl"
          class="cn.com.rexen.bean.core.system.NewMessageCountPollingServiceImpl">
        <property name="id" value="${id}"/>
        <property name="type" value="${type}"/>
        <property name="interval" value="${interval}"/>
        <property name="url" value="${url}"/>
        <property name="stop" value="${stop}"/>
        <property name="callbackHandler" value="${callbackHandler}"/>
    </bean>
    <service interface="cn.com.rexen.core.api.system.IPollingService" ref="newMessageCountPollingServiceImpl"/>


    <bean id="messagePollingImpl" class="cn.com.rexen.bean.core.system.MessagePollingServiceImpl">
        <property name="id" value="$[count.id]"/>
        <property name="type" value="$[count.type]"/>
        <property name="interval" value="$[count.interval]"/>
        <property name="url" value="$[count.url]"/>
        <property name="stop" value="$[count.stop]"/>
        <property name="callbackHandler" value="$[count.callbackHandler]"/>
    </bean>
    <service interface="cn.com.rexen.core.api.system.IPollingService" ref="messagePollingImpl"/>
</blueprint>

