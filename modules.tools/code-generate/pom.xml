    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>cn.com.rexen.kalix</groupId>
        <artifactId>modules.tools</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>code-generate</artifactId>
    <name>Kalix :: Tools - CodeGenerate</name>
    <description>Tools CodeGenerate</description>
    <packaging>pom</packaging>

    <properties>
        <bundle.symbolicName>cn.com.rexen.tools.codegenerate</bundle.symbolicName>
        <bundle.namespace>${bundle.symbolicName}</bundle.namespace>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-core</artifactId>
            <version>2.0.9</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.7</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>

        <plugins>
            <plugin>
                <groupId>cn.com.rexen.tools</groupId>
                <artifactId>maven-kalix-plugin</artifactId>
                <version>1.0.0-SNAPSHOT</version>
                <configuration>
                    <inputDir>src/templates</inputDir>
                    <outputDir>${project.build.directory}/generate</outputDir>
                    <attributes>
                        <beanName>Dict</beanName>
                        <packageName>cn.com.rexen.admin.dict</packageName>
                        <parentPackageName>cn.com.rexen.kalix.admin</parentPackageName>
                        <pomName>dict</pomName>
                        <projectName>Dict</projectName>
                        <parentName>admin</parentName>
                        <versionName>1.0.0-SNAPSHOT</versionName>
                        <module_Name>字典</module_Name>
                        <extjsPrefix>kalix.admin.dict</extjsPrefix>
                    </attributes>
                    <sources>
                        <source>${basedir}/src/main/java</source>
                    </sources>
                </configuration>
            </plugin>
            <!--<plugin>
                <groupId>org.apache.aries.blueprint</groupId>
