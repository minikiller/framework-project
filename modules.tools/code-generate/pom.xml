<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>cn.com.rexen.kalix</groupId>
        <artifactId>modules.tools</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>code-generate</artifactId>
    <name>Kalix :: Tools - CodeGenerate</name>
    <description>Tools CodeGenerate</description>
    <packaging>pom</packaging>

    <properties>
        <bundle.symbolicName>cn.com.rexen.tools.codegenerate</bundle.symbolicName>
        <bundle.namespace>${bundle.symbolicName}</bundle.namespace>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.thoughtworks.qdox</groupId>
            <artifactId>qdox</artifactId>
            <version>2.0-M3</version>
        </dependency>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-core</artifactId>
            <version>2.0.9</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.7</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>

        <plugins>
            <plugin>
                <groupId>cn.com.rexen.tools</groupId>
                <artifactId>maven-kalix-plugin</artifactId>
                <version>1.0.0-SNAPSHOT</version>
                <configuration>
                    <inputDir>src/templates</inputDir>
                    <outputDir>${project.build.directory}/generate</outputDir>
                    <attributes>
                        <parentName>kalix-project</parentName>
                        <parentPackageName>cn.com.rexen.kalix</parentPackageName>
                        <projectName>Kalix</projectName>
                        <packageName>cn.com.rexen.bean</packageName>
                        <versionName>1.0.0-SNAPSHOT</versionName>
                        <module_Name>学生</module_Name>
                        <pomName>student</pomName>
                        <beanName>Student</beanName>
                        <!-- 实体java类所在的位置-->
                        <beanDir>src/main/java</beanDir>
                        <extjsPrefix>kalix.app.student</extjsPrefix>

                        <!-- 配置权限-->
                        <permission_app>admin</permission_app><!-- 应用-->
                        <permission_module>constructModule</permission_module><!-- 模块-->
                        <permission_menu>studentMenu</permission_menu><!-- 菜单-->

                        <!-- 配置菜单-->
                        <module_id>constructModule</module_id>
                        <menu_id>studentMenu</menu_id>
                        <menu_text>学生管理</menu_text>
                        <menu_index>50</menu_index>
                        <menu_icon_class>x-fa fa-cutlery</menu_icon_class>
                        <menu_route_id>app/student</menu_route_id>
                    </attributes>
                    <sources>
                        <source>${basedir}/src/main/java</source>
                    </sources>
                </configuration>
            </plugin>
            <!--<plugin>
                <groupId>org.apache.aries.blueprint</groupId>
                <artifactId>blueprint-maven-plugin</artifactId>
                <version>1.1.0</version>
                <configuration>
                    <scanPaths>
                        <scanPath>cn.com.rexen.example.pax.cdi</scanPath>
                    </scanPaths>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>blueprint-generate</goal>
                        </goals>
                        <phase>process-classes</phase>
                    </execution>
                </executions>
            </plugin>-->
        </plugins>
    </build>

</project>